repeat
	wait()
until game:IsLoaded()
local plr = game:GetService("Players")
local lplr = plr.LocalPlayer

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/deeeity/mercury-lib/master/src.lua"))()

local GUI = Library:Create{
	Name = "FallAngel Hub",
	Size = UDim2.fromOffset(600, 400),
	Theme = Library.Themes.Serika,
	Link = "https://discord.gg/b9QX5rnkT5"
}

local Maintab = GUI:tab{
	Name = "Main",
	Icon = "rbxassetid://2174510075" -- rbxassetid://2174510075 home icon
}

GUI:Credit{
	Name = "x3Fall3nAngel",
	Description = "Made the script",
	V3rm = "https://v3rmillion.net/member.php?action=profile&uid=2270329",
	Discord = "https://discord.gg/b9QX5rnkT5"
}

GUI:Notification{
	Title = "Hey!",
	Text = "Join our discord server! discord.gg/b9QX5rnkT5",
	Duration = 20,
	Callback = function()
		game:IsLoaded()
	end
}


Maintab:Toggle{
	Name = "Insta Kill Zombie",
	Description = "Please Hold A Weapon",
	StartingState = false,
	Callback = function(state)
		getgenv().instant = state
	end
}

Maintab:Button{
	Name = "Become Zombie",
	StartingState = false,
	Callback = function()
		becomezombie()
	end
}

function becomezombie()
	game:GetService("ReplicatedStorage").Remotes.PlayerZombie:FireServer(lplr.Character)
end

function closestzombie()
    local target = nil
    local distance = math.huge
    for _, v in pairs(game:GetService("Workspace")["Zombie Storage"]:GetChildren()) do
        if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 and v:FindFirstChild("HumanoidRootPart") then
            local magnitude = (lplr.Character.HumanoidRootPart.Position - v.HumanoidRootPart.Position).Magnitude
            if magnitude < distance then
                target = v
                distance = magnitude
            end
        end
    end
    return target
end

spawn(function()
	while wait(.1) do
		if instant and closestzombie() then
            if lplr.Character and lplr.Character:FindFirstChild("Alive") and lplr.Character:FindFirstChildOfClass("Tool") then
                local ohTable1 = {
                    ["RealTool"] = lplr.Character:FindFirstChildOfClass("Tool"),
                    ["Tool"] = lplr.Character:FindFirstChildOfClass("Tool"),
                    ["HumanoidTables"] = {
                        [1] = {
                            ["HeadHits"] = 1000,
                            ["THumanoid"] = closestzombie().Humanoid,
                            ["BodyHits"] = 0
                        }
                    }
                }
                game:GetService("ReplicatedStorage").Remotes.WeaponEvent:FireServer(ohTable1)
                wait(.1)
            end
        end
	end
end)
